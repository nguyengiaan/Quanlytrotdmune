@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Quanlytrotdmune.Models.ROOM>
@{
    ViewBag.Title = "SumRoom";
    Layout = "~/Views/Shared/_LayoutPage4.cshtml";
}

<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            @using (Html.BeginForm("SumRoom", "Home", FormMethod.Get))
                            {
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="product-short">
                                            <select class="select-css" name="price" id="price">
                                                <option selected>Hãy chọn giá</option>
                                                <option value="1">500.000 ->700.000</option>
                                                <option value="2">700.000 ->1.000.000</option>
                                                <option value="3">1.000.000->2.000.000</option>
                                            </select>

                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="product-short">
                                            <div class="product-short">
                                                <select class="select-css" name="km" id="km">
                                                    <option selected>Số km</option>
                                                    <option value="1">1km</option>
                                                    <option value="2">2km</option>
                                                    <option value="3">3km</option>
                                                    <option value="4">4km</option>
                                                    <option value="5">5km</option>
                                                </select>
                                                </div>

                                            </div>
                                        </div>
                                            <div class="col-md-4">
                                                <div class="product-short" style="padding-right:159px;">
                                                    <button class="btn btn-outline-secondary" type="submit" style="border-color:dodgerblue!important;color:dodgerblue;margin-bottom:30px">Tìm kiếm</button>
                                                </div>
                                            </div>

                                        </div>

                                        }
                                    </div>
                                </div>

                    @foreach (var a in Model)
                    {
                        <div class="col-md-4">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="@Url.Action("Detail", "Room", new { id = a.room_id })">@a.name</a>
                                </div>
                                <div class="product-image">
                                    <a href="@Url.Action("Detail", "Room", new { id = a.room_id })">
                                        <img src="@Url.Content("~/Content/Anhtro/" + a.Avt)" style="width:400px;height:200px" />
                                    </a>
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                                        <a href="@Url.Action("Additem", "User", new { iduser = ViewBag.id, idroom = a.room_id })"><i class="fa fa-heart"></i></a>
                                        <a href="#"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3><span>VNĐ</span>@String.Format("{0:0,0}", a.price)</h3>
                                </div>
                            </div>
                        </div>
                    }


                    <!-- Pagination Start -->
                    <div class="col-md-12">
                        <nav aria-label="Page navigation example">
                            @Html.PagedListPager(Model, page => Url.Action("SumRoom", new { page, pagesize = 9 }))
                        </nav>
                    </div>
                    <!-- Pagination Start -->

                </div>

                <!-- Side Bar Start -->
                <!-- Side Bar End -->
            </div>
                <div class="col-lg-4 sidebar">
        <div class="sidebar-widget category">
            <h2 class="title">Category</h2>
            <nav class="navbar bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-home" style="color:dodgerblue!important"></i>Nhà trọ giá rẻ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-globe" style="color:dodgerblue!important"></i>Cách Trường 500m</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-address-card" style="color:dodgerblue!important"></i>Cách Trường 1Km</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-plus-square" style="color:dodgerblue!important"></i>Cách Trường 2km</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-mobile-alt" style="color:dodgerblue!important"></i>Cách Trường 3km</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-adjust" style="color:dodgerblue!important"></i>Cách Trường 4km</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-microchip" style="color:dodgerblue!important"></i>Cách Trường 5km</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
        </div>
    </div>

</div>
