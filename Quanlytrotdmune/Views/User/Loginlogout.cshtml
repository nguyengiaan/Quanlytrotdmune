@using Quanlytrotdmune.Models
@{
    USERTRO user = (USERTRO)Session["Iduser"];
}
<div class="nav" style="background-color:dodgerblue!important">
    <div class="container-fluid" style="background-color:dodgerblue!important">
        <nav class="navbar navbar-expand-md bg-dark navbar-dark" style="background-color:dodgerblue!important">
            <a href="#" class="navbar-brand">MENU</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav mr-auto">
                    <a href="@Url.Action("Index","Home")" class="nav-item nav-link active">Trang chủ</a>
                    <a href="@Url.Action("SumRoom","Home")" class="nav-item nav-link">Nhà Trọ</a>
                    <a href="@Url.Action("Favorite", "User", new {iduser=ViewBag.id})" class="nav-item nav-link">Favorite</a>
                </div>
                <div class="navbar-nav ml-auto">
                    <div class="nav-item dropdown">
                        @if (Session["Iduser"] == null)
                        {
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">User Account</a>
                            <div class="dropdown-menu" style="background-color:dodgerblue!important">
                                <a href="@Url.Action("Login", "User")" class="dropdown-item">Login</a>
                                <a href="@Url.Action("Register", "User")" class="dropdown-item">Register</a>
                            </div>
                        }
                        else
                        {
                         <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">User Account</a>
                         <div class="dropdown-menu" style="background-color:dodgerblue!important">
                            <a href="@Url.Action("profile","User")" class="dropdown-item">@user.full_name</a>
                            <a href="#" class="dropdown-item">Log Out</a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </div>
